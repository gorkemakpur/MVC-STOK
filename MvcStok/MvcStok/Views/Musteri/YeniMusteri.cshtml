@model MvcStok.Models.Entity.TblMusteriler
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">

    <div>
        <div>
            <label>Müşteri Adı</label>
            @Html.TextBoxFor(m => m.MusteriAd, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MusteriAd, "", new { @style = "color:red" })
        </div>

        <div>
            <label style="margin-top:10px">Müşteri Soyadı</label>
            <input type="text" class="form-control" name="MusteriSoyad" />
        </div>


    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1"> Müşteri Ekle</button>
    </div>


    <script>
        $('#btn1').click(function () {
            alert('Müşteri Ekleme İşlemi Yapıldı...');
        });
    </script>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
</form>
