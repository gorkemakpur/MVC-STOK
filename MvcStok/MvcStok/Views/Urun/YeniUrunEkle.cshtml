@model MvcStok.Models.Entity.TblUrunler 
@{
    ViewBag.Title = "YeniUrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<form class="form-group" method="post">

    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAdi" required=""/>
    </div>

    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="Marka" required=""/>
    </div>

    <div>
        <label>Kategori</label>
        @Html.DropDownListFor(m =>m.TblKategoriler.KategoriID, 
                    (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

        <!--linq sorgusu ile kategori id sini alıyoruz controller
            tarafından aldığımız viewbag ile de kategori isimlerini yazdırıyoruz-->
    </div>

    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" required maxlength="6"/>
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="Stok" placeholder="Stok girin"/>
    </div>



    <div style="margin-top:15px">
        <button class="btn btn-info"> Ürün Ekle</button>
    </div>
</form>
